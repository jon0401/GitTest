<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


        <TextView
            android:id="@+id/pament_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:text="PAYMENT DETAILS"
            android:textColor="@color/colorUI2"
            android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pament_textview1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="80px"
            android:text="We Accept:"
            android:textColor="@color/colorUI"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pament_image1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30px"
                android:src="@drawable/pay1"/>
            <ImageView
                android:id="@+id/pament_image2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30px"
                android:src="@drawable/pay2"/>
            <ImageView
                android:id="@+id/pament_image3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30px"
                android:src="@drawable/pay3"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="80px"
            android:text="Card Number:"
            android:textColor="@color/colorUI"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_marginLeft="80px"
            android:hint="Please enter Card Number"
            android:textColor="@color/colorUI"
            android:textSize="30px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="80px"
            android:text="Expiry Date:"
            android:textColor="@color/colorUI"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_marginLeft="80px"
                android:hint="Start Date"
                android:textSize="30px"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_marginLeft="80px"
                android:hint="End Date"
                android:textSize="30px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="80px"
            android:text="CVV Code:"
            android:textColor="@color/colorUI"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_marginLeft="80px"
            android:hint="Please enter CVV Code"
            android:textSize="30px"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="PAY NOW"
        android:textColor="#FFFFFF"
        android:background="@drawable/ovalbutton"
        android:textSize="30px"/>
    </LinearLayout>
    <include
        layout="@layout/activity_base_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom" />
</RelativeLayout>