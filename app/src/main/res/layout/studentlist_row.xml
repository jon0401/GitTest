<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/contacticon"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txtStudent"
            android:textColor="@color/colorUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnLesson"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Lesson"
            android:layout_margin="10dp"
            android:textColor="@color/colorUI"
            android:background="@drawable/ovalbuttontans" />


        <Button
            android:id="@+id/btnProgression"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ovalbuttontans"
            android:text="Progression"
            android:textColor="@color/colorUI" />
    </LinearLayout>

</LinearLayout>
