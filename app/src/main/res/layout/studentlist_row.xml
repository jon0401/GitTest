<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/contacticon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:gravity="left"
        android:textAllCaps="true"
        android:textColor="@color/colorUI"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnLesson"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <Button
        android:id="@+id/btnLesson"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/ovalbuttontans"
        android:text="Lesson"
        android:textColor="@color/colorUI"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />


    <Button
        android:id="@+id/btnProgression"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ovalbuttondark"
        android:text="Progression"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLesson"
        app:layout_constraintStart_toEndOf="@+id/btnLesson" />



</android.support.constraint.ConstraintLayout>
