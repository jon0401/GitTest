<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"

        >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/contacticon"
        android:scaleType="fitXY"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/txtStudent"
            android:textColor="@color/colorUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="24sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <Button
                android:id="@+id/btnLesson"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Lesson"
                android:textColor="@color/colorUI"
                android:background="@drawable/ovalbuttontans" />


            <Button
                android:id="@+id/btnProgression"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ovalbuttondark"
                android:text="Progression"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
