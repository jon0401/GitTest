            <TextView
                android:id="@+id/add_practiceNote_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:text="Practice Note"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#223017"
                android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:id="@+id/ll1"
            app:layout_constraintTop_toBottomOf="@+id/add_practiceNote_title"
            >

            <TextView
                android:id="@+id/txtStudentCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:textColor="#223017"
                android:text="Created By: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtStudentCreatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:layout_marginLeft="30dp"
                android:text="Student Name"
                android:textColor="#223017"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:id="@+id/ll2"
            app:layout_constraintTop_toBottomOf="@+id/ll1"
            >

            <TextView
                android:id="@+id/txtPracticeNoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="Date: "
                android:textColor="#223017"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/etxtPracticeNoteDateEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginLeft="85dp"
                android:hint="Date"
                android:textColor="#223017"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:id="@+id/ll3"
            app:layout_constraintTop_toBottomOf="@+id/ll2"
            >

            <TextView
                android:id="@+id/txtPracticeDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="Duration"
                android:textColor="#223017"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/etxtPracticeNoteDurationEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30px"
                android:hint="Duration"
                android:textColor="#223017"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:background="@drawable/ovalbuttontans"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ll2"
             >

            <TextView
                android:id="@+id/mtxtPracticeNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="top"
                android:layout_margin="10dp"
                android:text="Blank"
                android:inputType="textMultiLine"
                android:textSize="20sp" />


        </ScrollView>


    <include
        layout="@layout/activity_base_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--</RelativeLayout>-->
</android.support.constraint.ConstraintLayout>