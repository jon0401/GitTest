    <Button
        android:id="@+id/btnViewRequest"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/ovalbuttondark"
        android:text="Connect With Teacher"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upcomingstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="Upcoming Lessons in Next 7 Days"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btnViewRequest"
        tools:layout_editor_absoluteX="0dp" />


    <ListView
        android:id="@+id/listUpcomingLesson"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/upcomingstudent"
        tools:layout_editor_absoluteX="0dp" />

