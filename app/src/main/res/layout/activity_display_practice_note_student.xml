<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <ListView
        android:id="@+id/listViewPracticeNote"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:divider="@color/colorUI"
        android:dividerHeight="1dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnAddPracticeNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewPracticeNote"
        android:text="Add Practice Note"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorUI"
        android:background="@drawable/ovalbuttontans"
        />

    <include
        layout="@layout/activity_base_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom" />

</RelativeLayout>