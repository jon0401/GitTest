<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btnProgressionPracticeNoteTeacher"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ovalbuttondark"
        android:text="View Practice Note"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/txtPracticeDuration"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnProgressionPracticeNoteTeacher"
        android:textSize="28sp"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textColor="@color/colorUI"/>

    <include
        layout="@layout/activity_base_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom" />

</RelativeLayout>
