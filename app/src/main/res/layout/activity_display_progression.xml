<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnProgressionPracticeNoteTeacher"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ovalbutton"
        android:text="Practice Note"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/txtPracticeDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnProgressionPracticeNoteTeacher"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
